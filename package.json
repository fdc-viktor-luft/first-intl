{
  "name": "first-intl",
  "version": "1.0.0",
  "description": "First intl setup",
  "main": "src/intl.js",
  "scripts": {
    "test": "jest --colors",
    "flow": "flow --quiet",
    "eslint": "eslint --cache --cache-location 'build/.eslintcache' src/",
    "prettier": "prettier --config .prettierrc --write '*/src/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fdc-viktor-luft/first-intl.git"
  },
  "keywords": [
    "intl",
    "internationalization",
    "translation",
    "languages",
    "setup"
  ],
  "author": "Viktor Luft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fdc-viktor-luft/first-intl/issues"
  },
  "homepage": "https://github.com/fdc-viktor-luft/first-intl#readme",
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.86.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "spy4js": "^2.0.0"
  },
  "dependencies": {
    "react": "^16.6.1",
    "react-dom": "^16.6.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "testURL": "https://localhost",
    "collectCoverageFrom": [
      "src/**/*.{js}"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.js"
    ],
    "coverageDirectory": "<rootDir>/build/coverage",
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-flow",
      "@babel/preset-react"
    ]
  }
}
