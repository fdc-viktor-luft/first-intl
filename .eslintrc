{
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/flowtype",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "prettier/react"
  ],
  "plugins": [
    "prettier",
    "flowtype"
  ],
  "env": {
    "jest": true,
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": ["error", {
      "useTabs": false,
      "printWidth": 120,
      "tabWidth": 4,
      "singleQuote": true,
      "trailingComma": "es5",
      "jsxBracketSameLine": true,
      "parser": "flow"}],
    "no-unused-vars": 2,
    "flowtype/require-valid-file-annotation": [2, "always"]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8.2",
      "flowVersion": "0.93"
    }
  }
}
